<div class="row">
	<div class="col-md-4">
		<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form"
			aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered modal-sm" role="document">
				<div class="modal-content">
					<div class="modal-body p-0">
						<div class="card card-plain">
							<div class="card-header pb-0 text-left">
								<h3 class="font-weight-bolder text-info text-gradient">Start investing with {Admin}</h3>
								<p class="mb-0">How much do you have for investment</p>
							</div>
							<div class="card-body">
								<form role="form text-left" data-form-addUser="true">
									<label>Amount</label>
									<div class="input-group mb-3">
										<input type="number" class="form-control" placeholder="5.00"
											aria-label="number" aria-describedby="number-addon" min="5" max="10" required>
									</div>
									
									<div class="text-center">
										<button type="submit" class="btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0">Start</button>
									</div>
								</form>
							</div>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
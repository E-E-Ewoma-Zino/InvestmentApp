<!-- This is the update profile modal -->
<div class="row">
	<div class="col-md-4">
		<div class="modal fade" id="modal-form-update-profile" tabindex="-1" role="dialog" aria-labelledby="modal-form"
			aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered modal-sm" role="document">
				<div class="modal-content">
					<div class="modal-body p-0">
						<div class="card card-plain">
							<div class="card-header pb-0 text-left">
								<h3 class="font-weight-bolder text-info text-gradient">Profile image</h3>
								<p class="mb-0">Pick a picture form your device</p>
							</div>
							<div class="card-body">
								<form id="uploadProfilePicForm" role="form text-left" data-form-addUser="true">
									<label>Upload</label>
									<div class="input-group mb-3">
										<input type="file" id="profile-img-file" name="image" class="form-control" required>
									</div>
									<img src="/<%- data.profilePic? data.profilePic.path: "dashboard/img/demo_profile.png" %>" data-profile-img-demo="demo"
										class="img-fluid">
									<div class="text-center">
										<button type="submit"
											class="btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0">Upload</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
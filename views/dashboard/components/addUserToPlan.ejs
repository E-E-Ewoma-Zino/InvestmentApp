<div class="row">
	<div class="col-md-4">
		<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form"
			aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered modal-sm" role="document">
				<div class="modal-content">
					<div class="modal-body p-0">
						<div class="card card-plain">
							<div class="card-header pb-0 text-left">
								<h3 class="font-weight-bolder text-info text-gradient">Start investing with <span
										data-set-investor-name="true">Investor</span></h3>
								<p class="mb-0">How much do you have for investment</p>
							</div>
							<div class="card-body">
								<form role="form text-left" data-form-addUser="true">
									<label>Amount</label>
									<div class="input-group mb-3">
										<span class="input-group-text">$</span>
										<input type="number" class="form-control" placeholder="<%- plan.minBudget %>"
											aria-describedby="number-addon"
											aria-label="Dollar amount (with dot and two decimal places)"
											min="<%- plan.minBudget %>" max="<%- plan.maxBudget %>" required>
									</div>

									<div class="text-center">
										<button type="submit"
											class="btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0">Start</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
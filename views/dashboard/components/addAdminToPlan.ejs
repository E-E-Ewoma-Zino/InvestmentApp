<% let show = -1; %>
<% user.planDescriptions.forEach( (des, index) => { %>
<% if(des.plan.toString() == plan._id.toString()) show = index %>
<% }); %>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title font-weight-bolder text-info text-gradient" id="exampleModalLabel">Basic Plan
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="card h-100">
				<div class="card-header pb-0 p-3">
					<div class="row">
						<div class="col-md-8 d-flex align-items-center">
							<%- show > -1? `<h6 class="mb-0">Your Description</h6>`: "Dont't forget to set you plan prefrences in the settings" %>
							<!-- <h6 class="mb-0">Your Description</h6> -->
						</div>
						<div class="col-md-4 text-end">
							<a href="javascript:;">
								<i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip"
									data-bs-placement="top" title="" data-bs-original-title="Edit Profile"
									aria-label="Edit Profile"></i>
							</a>
						</div>
					</div>
				</div>
				<div class="card-body p-3">
					<p class="text-sm"><%- show > -1? user.planDescriptions[show].description: "You should describe why users should invest with you" %></p>
					<hr class="horizontal gray-light my-4">
					<ul class="list-group">
						<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark" title="Add the method you can use for making the investment eg Forex Trading">
								Method:</strong> &nbsp; <%- show > -1? user.planDescriptions[show].method: "Empty" %></li>
						<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark" title="By how many pecentage can you make an interest?">
								Increase:</strong> &nbsp; <%- show > -1? user.planDescriptions[show].increase: "Empty" %></li>
						<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark" title="How long would it take you?">
								Duration:</strong> &nbsp; <%- show > -1? user.planDescriptions[show].duration: "Empty" %></li>
						<li class="list-group-item border-0 ps-0 pb-0"><strong class="text-dark text-sm" title="How many people can you work with at a time?">
								Max Investment:</strong> &nbsp; <%- show > -1? user.planDescriptions[show].maxInvestment: "Empty" %></li>
					</ul>
				</div>
				<div class="modal-footer justify-content-between">
					<div class="d-flex justify-content-center align-items-center">
						<% if(show > -1) { %> 
						<a href="/dashboard/profile#settings?plan=<%- show %>">
							<i class="fa fa-cog" aria-hidden="true"></i>
							<span class="text-muted">
								Change
							</span>
						</a>
						<% } %>
					</div>
					<div class="d-flex justify-content-center align-items-center">
						<button type="button" class="btn bg-gradient-secondary btn-sm mb-0 me-1"
							data-bs-dismiss="modal">Close</button>
						<!-- TODO: Add the plan id here -->
						<button type="button" data-bs-addAdmin="true" value="<%- plan._id %>"
							class="btn bg-gradient-info btn-lg mb-0 ms-1">JOIN</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
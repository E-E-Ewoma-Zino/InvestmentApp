<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title font-weight-bolder text-info text-gradient" id="exampleModalLabel">Basic Plan</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="card h-100">
				<div class="card-header pb-0 p-3">
					<div class="row">
						<div class="col-md-8 d-flex align-items-center">
							<h6 class="mb-0">Your Description</h6>
						</div>
						<div class="col-md-4 text-end">
							<a href="javascript:;">
								<i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip"
									data-bs-placement="top" title="" data-bs-original-title="Edit Profile"
									aria-label="Edit Profile"></i>
							</a>
						</div>
					</div>
				</div>
				<div class="card-body p-3">
					<p class="text-sm"><%- user.description %></p>
					<hr class="horizontal gray-light my-4">
					<ul class="list-group">
						<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">
								Method:</strong> &nbsp; <%- user.method %></li>
						<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">
								Increase:</strong> &nbsp; <%- user.increase %></li>
						<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">
								Duration:</strong> &nbsp; <%- user.duration %></li>
						<li class="list-group-item border-0 ps-0 pb-0"><strong class="text-dark text-sm">
								Max Investment:</strong> &nbsp; <%- user.maxInvestment %></li>
					</ul>
				</div>
				<div class="modal-footer justify-content-between">
					<div class="d-flex justify-content-center align-items-center">
						<a href="/dashboard/profile#settings">
							<i class="fa fa-cog" aria-hidden="true"></i>
							<span class="text-muted">
								Change
							</span>
						</a>
					</div>
					<div class="d-flex justify-content-center align-items-center">
						<button type="button" class="btn bg-gradient-secondary btn-sm mb-0 me-1" data-bs-dismiss="modal">Close</button>
						<!-- TODO: Add the plan id here -->
						<button type="button" data-bs-addAdmin="true" value="<%- plan._id %>" class="btn bg-gradient-info btn-lg mb-0 ms-1">JOIN</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
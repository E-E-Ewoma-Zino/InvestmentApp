								<g transform="translate(-2319.000000, -291.000000)" fill="#FFFFFF" fill-rule="nonzero">
									<g transform="translate(1716.000000, 291.000000)">
										<g transform="translate(603.000000, 0.000000)">
											<path class="color-background"
												d="M22.7597136,19.3090182 L38.8987031,11.2395234 C39.3926816,10.9925342 39.592906,10.3918611 39.3459167,9.89788265 C39.249157,9.70436312 39.0922432,9.5474453 38.8987261,9.45068056 L20.2741875,0.1378125 L20.2741875,0.1378125 C19.905375,-0.04725 19.469625,-0.04725 19.0995,0.1378125 L3.1011696,8.13815822 C2.60720568,8.38517662 2.40701679,8.98586148 2.6540352,9.4798254 C2.75080129,9.67332903 2.90771305,9.83023153 3.10122239,9.9269862 L21.8652864,19.3090182 C22.1468139,19.4497819 22.4781861,19.4497819 22.7597136,19.3090182 Z">
											</path>
											<path class="color-background"
												d="M23.625,22.429159 L23.625,39.8805372 C23.625,40.4328219 24.0727153,40.8805372 24.625,40.8805372 C24.7802551,40.8805372 24.9333778,40.8443874 25.0722402,40.7749511 L41.2741875,32.673375 L41.2741875,32.673375 C41.719125,32.4515625 42,31.9974375 42,31.5 L42,14.241659 C42,13.6893742 41.5522847,13.241659 41,13.241659 C40.8447549,13.241659 40.6916418,13.2778041 40.5527864,13.3472318 L24.1777864,21.5347318 C23.8390024,21.7041238 23.625,22.0503869 23.625,22.429159 Z"
												opacity="0.7"></path>
											<path class="color-background"
												d="M20.4472136,21.5347318 L1.4472136,12.0347318 C0.953235098,11.7877425 0.352562058,11.9879669 0.105572809,12.4819454 C0.0361450918,12.6208008 6.47121774e-16,12.7739139 0,12.929159 L0,30.1875 L0,30.1875 C0,30.6849375 0.280875,31.1390625 0.7258125,31.3621875 L19.5528096,40.7750766 C20.0467945,41.0220531 20.6474623,40.8218132 20.8944388,40.3278283 C20.963859,40.1889789 21,40.0358742 21,39.8806379 L21,22.429159 C21,22.0503869 20.7859976,21.7041238 20.4472136,21.5347318 Z"
												opacity="0.7"></path>
										</g>
									</g>
								</g>
							</g>
						</svg>
						<span
							class="ms-1"><%- user.userActivePlan.filter(userPlan => userPlan.plan.toString() == plan._id.toString()).length > 0? "Active": "Inactive" %></span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container-fluid py-4">
		<div class="row mt-4">
			<!-- COMMENT: List of admins -->
			<div class="col-12 col-xl-12">
				<% if(!plan.activeAdmins.length){ %>
				<div class="card mb-4">
					<div class="card-header pb-0">
						<h4 class="h4">No investor is active on this plan</h4>
					</div>
				</div>
				<% }else{ %>
				<div class="card mb-4">
					<div class="card-header pb-0">
						<h6>Active Investors</h6>
					</div>
					<div class="card-body px-0 pt-0 pb-2">
						<div class="table-responsive p-0">
							<table class="table align-items-center mb-0">
								<thead>
									<tr>
										<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
											Investor
										</th>
										<th
											class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
											Method</th>
										<th
											class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
											Increase</th>
										<th
											class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
											Duration</th>
										<th class="text-secondary opacity-7"></th>
									</tr>
								</thead>
								<tbody>
									<% plan.activeAdmins.forEach( admin => { %>
									<tr>
										<td class="cursor-pointer" data-bs-toggle="modal" data-bs-target="#modal-form"
											onclick="getData({ adminName: '<%- admin.firstname %>', adminId: '<%- admin._id %>', planId: '<%- plan._id %>'})">
											<div class="d-flex px-2 py-1">
												<div>
													<% if(admin.profilePic){ %>
													<img src="/<%- admin.profilePic.path %> " alt="profile_image"
														class="avatar avatar-sm me-3">
													<% }else{ %>
													<span
														class="d-flex justify-content-center align-items-center avatar avatar-sm me-3 border-radius-lg shadow-sm text-uppercase bold bg-gradient-primary"><%- admin.firstname.substr(0, 1) %></span>
													<% } %>
												</div>
												<div class="d-flex flex-column justify-content-center">
													<h6 class="mb-0 text-sm"><%- admin.firstname %></h6>
													<p class="text-xs text-secondary mb-0"><%- admin.username %></p>
												</div>
											</div>
										</td>
										<td>
											<!-- TODO: Here would be the amount -->
											<p class="text-xs font-weight-bold mb-0"><%- admin.method %></p>
											<!-- TODO: Here will be the method of transfer -->
											<p class="text-xs text-secondary mb-0"><%- admin.level %></p>
										</td>
										<td class="align-middle text-center text-sm">
											<!-- TODO: Here would be the status of the payment -->
											<span class=""><%- admin.increase %></span>
										</td>
										<td class="align-middle text-center">
											<!-- TODO: Here is the date time -->
											<span
												class="text-secondary text-xs font-weight-bold"><%- admin.duration %></span>
										</td>
										<td class="align-middle">
											<a href="/dashboard/view/<%- admin.firstname %>?id=<%- admin._id %>"
												class="text-secondary font-weight-bold text-xs" data-toggle="tooltip"
												data-original-title="Edit user">
												See Profile
											</a>
										</td>
									</tr>
									<% }) %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<% } %>
			</div>
			<!-- Details -->
			<div class="col-12 col-xl-12 mt-5">
				<div class="card h-100">
					<div class="card-header pb-0 p-3">
						<div class="row">
							<div class="col-md-8 d-flex align-items-center">
								<h6 class="mb-0">Plan Description</h6>
							</div>
							<div class="col-md-4 text-end">
								<a href="javascript:;">
									<i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip"
										data-bs-placement="top" title="" data-bs-original-title="Edit Profile"
										aria-label="Edit Profile"></i>
								</a>
							</div>
						</div>
					</div>
					<div class="card-body p-3">
						<p class="text-sm"><%- plan.description %></p>
						<hr class="horizontal gray-light my-4">
						<ul class="list-group">
							<li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong
									class="text-dark">Name:</strong> &nbsp; <%- plan.name %> </li>
							<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Min
									Budget:</strong> &nbsp; <%- plan.minBudget %></li>
							<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Max
									Bubget:</strong> &nbsp; <%- plan.maxBudget %></li>
							<li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Active
									Investors:</strong> &nbsp; <%- plan.activeAdmins.length %></li>
							<li class="list-group-item border-0 ps-0 pb-0"><strong class="text-dark text-sm">Plan
									Key:</strong> &nbsp; <%- plan.planKey %></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<!-- Footer -->
		<%- include("partials/__footer") %>
	</div>
</main>

<!-- Add user to plan modal -->
<%- include("components/addUserToPlan") %>
<!-- Message Bird -->
<%- include("utils/messageBird") %>
<!-- Fixed Plugin -->
<%- include("partials/__theme") %>
<!--  -->
<!-- Script -->
<%- include("partials/__scripts") %>
<script src="/dashboard/js/modal/addUserToPlan.js"></script>
<!--  -->
</body>

</html>